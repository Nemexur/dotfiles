# change window focus within space
alt - j : /opt/homebrew/bin/yabai -m window --focus south
alt - k : /opt/homebrew/bin/yabai -m window --focus north
alt - h : /opt/homebrew/bin/yabai -m window --focus west
alt - l : /opt/homebrew/bin/yabai -m window --focus east

# fast focus desktop
alt - 0 : /opt/homebrew/bin/yabai -m space --focus recent

# flip along y-axis
alt - y : /opt/homebrew/bin/yabai -m space --mirror y-axis

# flip along x-axis
alt - x : /opt/homebrew/bin/yabai -m space --mirror x-axis

# maximize a window
alt - m : /opt/homebrew/bin/yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
alt - e : /opt/homebrew/bin/yabai -m space --balance

# swap windows
alt + ctrl - j : /opt/homebrew/bin/yabai -m window --swap south
alt + ctrl - k : /opt/homebrew/bin/yabai -m window --swap north
alt + ctrl - h : /opt/homebrew/bin/yabai -m window --swap west
alt + ctrl - l : /opt/homebrew/bin/yabai -m window --swap east

# move window to display left and right
alt - left : /opt/homebrew/bin/yabai -m window --display next; yabai -m display --focus next;
alt - right : /opt/homebrew/bin/yabai -m window --display previous; yabai -m display --focus previous;

# move window and focus desktop
alt + ctrl - 1 : /opt/homebrew/bin/yabai -m window --space 1; yabai -m space --focus 1
alt + ctrl - 2 : /opt/homebrew/bin/yabai -m window --space 2; yabai -m space --focus 2
alt + ctrl - 3 : /opt/homebrew/bin/yabai -m window --space 3; yabai -m space --focus 3
